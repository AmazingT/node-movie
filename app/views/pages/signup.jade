extends ../layout

block content
  .container
    .row
      .col-md-5
        .register-result
        form#register_form
          .signup-body
            .form-group
              label(for="singupName") 用户名
              input#singupName.form-control(name="user[name]", type="text")
            .form-group
              label(for="singupPassword") 密码
              input#singupPassword.form-control(name="user[password]", type="password")
          .signup-footer
            button.btn.btn-primary(type="button") 提交
  script(src="/js/user_register.js")