extends ../layout

block content
  .container
    .row
      .col-md-5
        .login-result
        form#login_form
          .modal-body
            .form-group
              label(for="singinName") 用户名
              input#singinName.form-control(name="user[name]", type="text")
            .form-group
              label(for="singinPassword") 密码
              input#singinPassword.form-control(name="user[password]", type="password")
          .modal-footer
            button.btn.btn-success(type="button") 登录
  script(src="/js/user_login.js")